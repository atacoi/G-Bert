#version 330 core

in vec2 TexCoords;

out vec4 FragColor;

uniform sampler2D texture1;

uniform int frameIndex;
uniform int columnCount;

void main() {
    vec2 tmp = vec2(TexCoords.x / columnCount + float(frameIndex) / float(columnCount), TexCoords.y);

    vec4 texColor = texture(texture1, tmp);
    FragColor = texColor;
}